{% extends 'BASES/base.admin.html.twig' %}

{% block body %}
    <h1>Boîte de réception</h1>
    <div class="row">
        {% for message in messages %}
            <div class="col-12 col-lg-4 col-md-12 offset-md-1">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-lg-11 col-12">
                                {{ message.senders.email }}
                            </div>
                            <div class="d-none d-sm-none d-md-none col-md-1 d-lg-block d-xl-block">
                                <i class="fas fa-eye"></i>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">{{ message.receveur.email }}</h5>
                        <p class="card-text">{{ message.contenu }}</p>
                        <p class="card-text small"> Sending at {{ message.createdAt|date('d-m-y h:m') }}</p>
                        <div class="row">
                            <a href="#" class="btn btn-success col-6 col-md-6 col-lg-4 offset-md-1">Répondre</a>
                            <a href="#" class="btn btn-danger col-6 col-md-6 col-lg-4 offset-md-1">Supprimer</a>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
{% block js %}

{% endblock %}